{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "summary": { "type": "string" },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "persona": { "type": "string" },
          "pain_points": {
            "type": "array",
            "items": { "type": "string" }
          },
          "preferred_channels": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "persona", "pain_points", "preferred_channels"],
        "additionalProperties": false
      }
    }
  },
  "required": ["summary", "segments"],
  "additionalProperties": false
}
