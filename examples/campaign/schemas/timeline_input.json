{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "channels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "format": { "type": "string" },
          "cadence": { "type": "string" },
          "audience_segment": { "type": "string" }
        },
        "required": ["name", "audience_segment"],
        "additionalProperties": false
      }
    },
    "budget_notes": { "type": "string" }
  },
  "required": ["channels"],
  "additionalProperties": false
}
