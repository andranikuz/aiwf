{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "narrative": { "type": "string" },
    "value_map": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "segment": { "type": "string" },
          "core_message": { "type": "string" },
          "proof_points": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["segment", "core_message", "proof_points"],
        "additionalProperties": false
      }
    }
  },
  "required": ["narrative", "value_map"],
  "additionalProperties": false
}
