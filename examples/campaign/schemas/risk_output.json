{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "impact": { "type": "string" },
          "likelihood": { "type": "string" },
          "mitigation": { "type": "string" },
          "monitoring_metric": { "type": "string" }
        },
        "required": ["label", "impact", "mitigation", "likelihood", "monitoring_metric"],
        "additionalProperties": false
      }
    }
  },
  "required": ["risks"],
  "additionalProperties": false
}
