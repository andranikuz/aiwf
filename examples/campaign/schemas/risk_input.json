{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "week": { "type": "integer", "minimum": 1 },
          "objective": { "type": "string" },
          "owner": { "type": "string" },
          "deliverables": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["week", "objective"],
        "additionalProperties": false
      }
    }
  },
  "required": ["milestones"],
  "additionalProperties": false
}
